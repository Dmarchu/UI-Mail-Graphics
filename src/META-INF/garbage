scrollPane.addMouseMotionListener(new MouseAdapter() {
                public void mouseMoved(MouseEvent e) {
                    if (e.getX() >= scrollPane.getWidth() - BORDER_THICKNESS) {
                        setCursor(new Cursor(Cursor.E_RESIZE_CURSOR));
                    } else {
                        setCursor(new Cursor(Cursor.DEFAULT_CURSOR));
                    }
                }

                public void mouseDragged(MouseEvent e) {
                    if (sres) {
                        double swidth = getSize().getWidth();
                        if (e.getX() < swidth / 3 && e.getX() > swidth / 5) {
                            sval = swidth / e.getX();
                            dispatchEvent(new ComponentEvent(frame, ComponentEvent.COMPONENT_RESIZED));
                        }
                    }
                }
            });

main.addMouseListener(new MouseAdapter() {
                @Override
                public void mousePressed(MouseEvent e) {
                    super.mousePressed(e);
                    int Ydouble = e.getY();
                    cres = Ydouble >= main.getHeight() - BORDER_THICKNESS;
                }

                @Override
                public void mouseReleased(MouseEvent e) {
                    super.mouseReleased(e);
                    cres = false;
                }
            });

main.addMouseMotionListener(new MouseAdapter() {
                public void mouseMoved(MouseEvent e) {
                    int Ydouble = e.getY();
                    if (Ydouble >= main.getHeight() - BORDER_THICKNESS) {
                        setCursor(new Cursor(Cursor.N_RESIZE_CURSOR));
                    } else {
                        setCursor(new Cursor(Cursor.DEFAULT_CURSOR));
                    }
